% Background
\setbeamercolor*{background canvas}{bg=white}

% Titlepage
\setbeamerfont{title}{size=\Huge}
\setbeamercolor*{title}{fg=green1}
\setbeamerfont{subtitle}{size=\large}

% Page Titles and subtitles
\setbeamercolor{frametitle-bar1}{fg=green2}
\setbeamercolor{frametitle-bar2}{fg=green3}
\setbeamercolor{frametitle}{fg=green1}
\setbeamerfont{frametitle}{size=\Large}
\setbeamerfont{framesubtitle}{size=\small}

% Lists
\setbeamertemplate{itemize items}[circle]
\setbeamercolor*{itemize item}{fg=green2}
\setbeamercolor*{itemize subitem}{fg=green2}
\setbeamercolor*{normal text}{fg=grey1}

% Footer
\setbeamercolor*{footer1}{bg=green1, fg=white}
\setbeamercolor*{footer2}{bg=green2, fg=white}
\setbeamercolor*{footer3}{bg=green3, fg=white}

\setbeamertemplate{footline}
{
    \hbox{
      \hspace{-4pt}
      \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.5ex,dp=1.125ex,center]{footer3}
        \ifnum \thepage>1 \centering \insertpagenumber\,/\,\insertpresentationendpage \fi
      \end{beamercolorbox}
      \hspace{-4pt}
      \begin{beamercolorbox}[wd=.6\paperwidth,ht=2.5ex,dp=1.125ex,center]{footer2}
        \ifnum \thepage>1 \centering \usebeamerfont{author in head/foot}\insertshorttitle \fi
      \end{beamercolorbox}
      \hspace{-4pt}
      \begin{beamercolorbox}[wd=.3\paperwidth,ht=2.5ex,dp=1.125ex,center]{footer1}
        \ifnum \thepage>1 \insertshortauthor \fi
      \end{beamercolorbox}
  }
}


% Frame title
\RequirePackage{tikz}
\newlength{\marginedPaperWidth}{\paperwidth - 0.2cm}
\defbeamertemplate*{frametitle}{light}[1][]{
  \vskip0.25cm
    \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle} 
    \begin{tikzpicture}
    \useasboundingbox(0,0) rectangle(\the\paperwidth,1.2);
    \fill[color=green3] (0.3,0) rectangle(\the\marginedPaperWidth,1.2);
    \fill[color=green1] (0.2,0) rectangle(\the\marginedPaperWidth,1.2);
     \ifx\insertframesubtitle\@empty
        {\node[anchor=west] at (0.3,0.61){\usebeamerfont{frametitle}\insertframetitle};}
        \else
        {\node[anchor= west] at (0.2,0.81){\usebeamerfont{frametitle}\insertframetitle};
         \node[anchor= west] at (0.4,0.25){\usebeamerfont{framesubtitle}-\insertframesubtitle};}
        \fi
    \end{tikzpicture}
  \end{beamercolorbox}
}


