\definecolor{grey2}{RGB}{120, 120, 120}
\definecolor{grey3}{RGB}{160, 160, 160}
\definecolor{grey4}{RGB}{200, 200, 200}
\definecolor{grey5}{RGB}{240, 240, 240}
\definecolor{green1}{RGB}{0, 50, 50}
\definecolor{green2}{RGB}{20, 90, 75}
\definecolor{green3}{RGB}{50, 130, 100}
\definecolor{green4}{RGB}{75, 170, 125}
\definecolor{green5}{RGB}{100, 210, 150}
